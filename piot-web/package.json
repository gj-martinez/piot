{
  "name": "piot-web",
  "version": "1.0.0",
  "description": "Plataforma Iot Simple - Web",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "prestart": "npm run build",
    "start-dev": "DEBUG=piot:* nodemon server.js",
    "prestart-dev": "npm run build",
    "build": "browserify -t babelify -t vueify client/app.js -o public/bundle.js",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gj-martinez/piot.git"
  },
  "author": "gonzalo martinez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gj-martinez/piot/issues"
  },
  "homepage": "https://github.com/gj-martinez/piot#readme",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "nodemon": "^2.0.15",
    "standard": "^16.0.4",
    "vueify": "^9.4.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "chart.js": "^3.7.0",
    "debug": "^4.3.3",
    "express": "^4.17.2",
    "express-asyncify": "^1.0.1",
    "piot-agent": "file:../piot-agent",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "socket.io": "^4.4.0",
    "vue": "^2.6.14",
    "vue-chartjs": "^3.5.0"
  }
}
